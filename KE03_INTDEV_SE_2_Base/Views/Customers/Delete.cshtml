@model DataAccessLayer.Models.Customer

@{
    ViewData["Title"] = "Klant Deactiveren";
}

<div class="container-fluid py-4">
    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h3 class="card-title mb-0">
                <i class="fas fa-exclamation-triangle me-2"></i>Klant Deactiveren
            </h3>
        </div>
        <div class="card-body">
            <div class="alert alert-warning">
                <h4 class="alert-heading">Let op!</h4>
                <p>Weet u zeker dat u deze klant wilt deactiveren? De klant wordt niet permanent verwijderd, maar alleen gemarkeerd als inactief.</p>
            </div>

            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Name)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Address)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Address)</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">
                    @if (Model.Active)
                    {
                        <span class="badge bg-success rounded-pill">Actief</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary rounded-pill">Inactief</span>
                    }
                </dd>
            </dl>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash me-2"></i>Deactiveren
                </button>
                <a asp-action="Index" class="btn btn-secondary ms-2">
                    <i class="fas fa-arrow-left me-2"></i>Terug naar Overzicht
                </a>
            </form>
        </div>
    </div>
</div>
