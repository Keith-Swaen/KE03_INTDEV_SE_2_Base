@model IEnumerable<DataAccessLayer.Models.Customer>

@{
    ViewData["Title"] = "Klanten";
}

<div class="container-fluid py-4">
    <!-- Titel en Actie Knop -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-users me-2"></i>Klanten Overzicht
        </h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Nieuwe Klant
        </a>
    </div>

    <!-- Klanten Tabel -->
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>
                                <i class="fas fa-user me-2 text-muted"></i>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                <i class="fas fa-map-marker-alt me-2 text-muted"></i>
                                @Html.DisplayNameFor(model => model.Address)
                            </th>
                            <th>
                                <i class="fas fa-check-circle me-2 text-muted"></i>
                                @Html.DisplayNameFor(model => model.Active)
                            </th>
                            <th class="text-end">Acties</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-semibold">@Html.DisplayFor(modelItem => item.Name)</td>
                                <td>@Html.DisplayFor(modelItem => item.Address)</td>
                                <td>
                                    @if (item.Active)
                                    {
                                        <span class="badge bg-success rounded-pill">Actief</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary rounded-pill">Inactief</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm" title="Bewerken">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm" title="Details">
                                        <i class="fas fa-info-circle"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" title="Verwijderen">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
