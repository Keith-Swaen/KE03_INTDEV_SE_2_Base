@model IEnumerable<DataAccessLayer.Models.Customer>

@{
    ViewData["Title"] = "Klanten";
}

<div class="container-fluid py-4">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800">
                <i class="fas fa-users me-2"></i>Klanten Overzicht
            </h1>
            <p class="text-muted mt-2">Beheer hier al uw klanten en hun status</p>
        </div>
        <div class="d-flex gap-3">
            <a asp-action="Index" asp-route-showInactive="@(!ViewBag.ShowInactive)" class="btn btn-outline-secondary px-4">
                <i class="fas fa-eye me-2"></i>@(ViewBag.ShowInactive ? "Verberg Inactieve Klanten" : "Toon Inactieve Klanten")
            </a>
            <a asp-action="Create" class="btn btn-primary px-4">
                <i class="fas fa-plus me-2"></i>Nieuwe Klant
            </a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-white py-3">
            <div class="row align-items-center">
                <div class="col">
                    <h5 class="mb-0 text-gray-800">Klanten Lijst</h5>
                </div>
                <div class="col-auto">
                    <span class="badge bg-primary rounded-pill">@Model.Count() klanten</span>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="border-0">
                                <i class="fas fa-user me-2 text-muted"></i>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th class="border-0">
                                <i class="fas fa-map-marker-alt me-2 text-muted"></i>
                                @Html.DisplayNameFor(model => model.Address)
                            </th>
                            <th class="border-0">
                                <i class="fas fa-check-circle me-2 text-muted"></i>
                                Status
                            </th>
                            <th class="border-0 text-end" style="width: 200px;">Acties</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="@(!item.Active ? "table-secondary" : "")">
                                <td class="fw-semibold">@Html.DisplayFor(modelItem => item.Name)</td>
                                <td>@Html.DisplayFor(modelItem => item.Address)</td>
                                <td>
                                    @if (item.Active)
                                    {
                                        <span class="badge bg-success rounded-pill">
                                            <i class="fas fa-check-circle me-1"></i>Actief
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary rounded-pill">
                                            <i class="fas fa-times-circle me-1"></i>Inactief
                                        </span>
                                    }
                                </td>
                                <td class="text-end">
                                    <div class="d-flex justify-content-end gap-2">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning" title="Bewerken">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info" title="Details">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger" title="Deactiveren">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
