@model DataAccessLayer.Models.Category

@{
    ViewData["Title"] = "Categorie bewerken";
}

<link rel="stylesheet" href="~/css/dashboard.css" />

<div class="container-fluid px-3 px-md-5 py-4">
    <div class="dashboard-section" style="max-width: 600px; margin: 0 auto;">
        <div class="dashboard-section-title mb-4">
            <i class="fas fa-edit me-2"></i>Categorie bewerken
        </div>
        <form asp-action="Edit">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label">Naam</label>
                <input asp-for="Name" class="form-control" placeholder="Voer categorienaam in" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label">Beschrijving</label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Voer een beschrijving in"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Active" class="form-label">Status</label>
                <div class="form-check form-switch">
                    <input asp-for="Active" class="form-check-input" type="checkbox" id="activeSwitch">
                    <label class="form-check-label" for="activeSwitch">
                        @if (Model.Active) { <span class="text-success">Actief</span> } else { <span class="text-secondary">Inactief</span> }
                    </label>
                </div>
            </div>
            <div class="form-group d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Opslaan
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Terug naar overzicht
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 