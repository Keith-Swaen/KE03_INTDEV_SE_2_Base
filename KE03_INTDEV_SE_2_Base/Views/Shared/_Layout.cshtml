<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KE03_INTDEV_SE_2_Base</title>

    <link href="https://cdn.jsdelivr.net/npm/ag-grid-community/styles/ag-grid.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/ag-grid-community/styles/ag-theme-alpine.css" rel="stylesheet" />

    <link href="https://unpkg.com/gridjs/dist/theme/mermaid.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KE03_INTDEV_SE_2_Base.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- Mobiele Header -->
    <header class="mobile-header d-md-none">
        <button type="button" id="sidebarCollapse" class="btn">
            <i class="fas fa-bars"></i>
        </button>
        <h1 class="mobile-title">Matrix Inc.</h1>
        <div class="dropdown mobile-nav-dropdown">
            <button class="btn" type="button" id="mobileNavDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="fas fa-ellipsis-v"></i>
            </button>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="mobileNavDropdown">
                <li>
                    <a class="dropdown-item" asp-area="" asp-controller="Dashboard" asp-action="Index">
                        <i class="fas fa-tachometer-alt"></i> Dashboard
                    </a>
                </li>
                <li>
                    <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="fas fa-home"></i> Home
                    </a>
                </li>
                <li>
                    <a class="dropdown-item" asp-area="" asp-controller="Customers" asp-action="Index">
                        <i class="fas fa-users"></i> Customers
                    </a>
                </li>
                <li>
                    <a class="dropdown-item" asp-area="" asp-controller="Products" asp-action="Index">
                        <i class="fas fa-box"></i> Products
                    </a>
                </li>
                <li>
                    <a class="dropdown-item" asp-area="" asp-controller="Category" asp-action="Index">
                        <i class="fas fa-tags"></i> Categories
                    </a>
                </li>
                <li>
                    <a class="dropdown-item" asp-area="" asp-controller="Orders" asp-action="Index">
                        <i class="fas fa-receipt"></i> Orders
                    </a>
                </li>
                <li><hr class="dropdown-divider"></li>
                <li>
                    <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Privacy">
                        <i class="fas fa-shield-alt"></i> Privacy
                    </a>
                </li>
                @if (User.Identity?.IsAuthenticated == true)
                {
                <li><hr class="dropdown-divider" /></li>
                <li>
                    <form asp-controller="Home" asp-action="Logout" method="post" style="display:inline;">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-link">Logout</button>
                    </form>
                </li>
                }
            </ul>
        </div>
    </header>

    <div class="wrapper">
        <!-- Zijbalk -->
        <nav id="sidebar" class="sidebar">
            <div class="sidebar-header d-none d-md-flex">
                <h3>Matrix Inc.</h3>
            </div>

            <ul class="list-unstyled components">
                <li>
                    <a asp-area="" asp-controller="Dashboard" asp-action="Index">
                        <i class="fas fa-tachometer-alt"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="fas fa-home"></i>
                        <span>Home</span>
                    </a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Customers" asp-action="Index">
                        <i class="fas fa-users"></i>
                        <span>Customers</span>
                    </a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Products" asp-action="Index">
                        <i class="fas fa-box"></i>
                        <span>Products</span>
                    </a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Category" asp-action="Index">
                        <i class="fas fa-tags"></i>
                        <span>Categories</span>
                    </a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Orders" asp-action="Index">
                        <i class="fas fa-receipt"></i>
                        <span>Orders</span>
                    </a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Home" asp-action="Privacy">
                        <i class="fas fa-shield-alt"></i>
                        <span>Privacy</span>
                    </a>
                </li>
                @if (User.Identity?.IsAuthenticated == true)
                {
                <li>
                    <form asp-controller="Home" asp-action="Logout" method="post" class="d-inline w-100">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-link text-start w-100">
                            <i class="fas fa-sign-out-alt"></i>
                            <span>Logout</span>
                        </button>
                    </form>
                </li>
                }
            </ul>
        </nav>

        <!-- Pagina Inhoud -->
        <div id="content">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>

            <footer class="border-top footer text-muted">
                <div class="container">
                    &copy; 2025 - KE03_INTDEV_SE_2_Base - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </div>
            </footer>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/ag-grid-community/dist/ag-grid-community.min.noStyle.js"></script>

    <script src="https://unpkg.com/gridjs/dist/gridjs.umd.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
