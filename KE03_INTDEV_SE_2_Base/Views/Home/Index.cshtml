@model KE03_INTDEV_SE_2_Base.Models.HomeViewModel

@{
    ViewData["Title"] = "Home";
    var username = User.Identity?.Name ?? "Gebruiker";
    var lastLogin = DateTime.Now.ToString("dd MMMM yyyy HH:mm"); // Replace with actual last login if available
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />


<div class="container mt-5">

    <!-- Welkom -->
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold">Welkom, @username!</h1>
        <p class="text-muted fs-5">Laatste login: @lastLogin</p>
    </div>

    <!-- Snelle Acties -->
    <div class="row justify-content-center mb-5 g-3">
        <div class="col-md-3 col-sm-6">
            <a href="/Orders/OrderOverview" class="btn btn-primary btn-lg w-100 d-flex align-items-center justify-content-center gap-2">
                <i class="bi bi-basket-fill fs-4"></i> Bestellingen bekijken
            </a>
        </div>
        <div class="col-md-3 col-sm-6">
            <a href="/Products" class="btn btn-success btn-lg w-100 d-flex align-items-center justify-content-center gap-2">
                <i class="bi bi-box-seam fs-4"></i> Producten beheren
            </a>
        </div>
        <div class="col-md-3 col-sm-6">
            <a href="/Customers" class="btn btn-warning btn-lg w-100 d-flex align-items-center justify-content-center gap-2 text-dark">
                <i class="bi bi-people-fill fs-4"></i> Klanten beheren
            </a>
        </div>
    </div>

    <!-- Dashboard Statistieken -->
    <div class="row text-center g-4">
        <div class="col-md-4 col-sm-6">
            <div class="card shadow-sm border-primary">
                <div class="card-body">
                    <h5 class="card-title text-primary">Aantal Bestellingen</h5>
                    <p class="display-5 fw-bold">@Model.Dashboard.TotalOrders</p>
                    <i class="bi bi-basket-fill text-primary fs-1"></i>
                </div>
            </div>
        </div>
        <div class="col-md-4 col-sm-6">
            <div class="card shadow-sm border-success">
                <div class="card-body">
                    <h5 class="card-title text-success">Aantal Producten</h5>
                    <p class="display-5 fw-bold">@Model.Dashboard.TotalProducts</p>
                    <i class="bi bi-box-seam text-success fs-1"></i>
                </div>
            </div>
        </div>
        <div class="col-md-4 col-sm-6 mx-auto">
            <div class="card shadow-sm border-warning">
                <div class="card-body">
                    <h5 class="card-title text-warning">Aantal Klanten</h5>
                    <p class="display-5 fw-bold">@Model.Dashboard.TotalCustomers</p>
                    <i class="bi bi-people-fill text-warning fs-1"></i>
                </div>
            </div>
        </div>
    </div>
</div>
