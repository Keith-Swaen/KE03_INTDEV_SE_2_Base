@model DataAccessLayer.Models.Order

@{
    ViewData["Title"] = "Bestelling Verwijderen";
}

<div class="container-fluid py-4">
    <div class="card shadow-sm" style="max-width:600px; margin:0 auto;">
        <div class="card-header bg-danger text-white">
            <h3 class="card-title mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Bestelling Verwijderen</h3>
        </div>
        <div class="card-body">
            <div class="alert alert-warning">
                <h4 class="alert-heading">Let op!</h4>
                <p>Weet u zeker dat u deze bestelling wilt verwijderen? Dit kan niet ongedaan worden gemaakt.</p>
            </div>
            <dl class="row mb-4">
                <dt class="col-sm-4">Order ID</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Id)</dd>
                <dt class="col-sm-4">Klant</dt>
                <dd class="col-sm-8">@Model.Customer?.Name</dd>
                <dt class="col-sm-4">Status</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Status)</dd>
                <dt class="col-sm-4">Orderdatum</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.OrderDate)</dd>
            </dl>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash me-2"></i>Verwijderen
                </button>
                <a asp-action="Index" class="btn btn-secondary ms-2">
                    <i class="fas fa-arrow-left me-2"></i>Terug naar overzicht
                </a>
            </form>
        </div>
    </div>
</div> 