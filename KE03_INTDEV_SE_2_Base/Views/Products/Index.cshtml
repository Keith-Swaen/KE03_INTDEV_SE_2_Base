@model IEnumerable<DataAccessLayer.Models.Product>

@{
    ViewData["Title"] = "Producten";
}

<div class="container-fluid py-4">
    <!-- Titel en Actie Knop -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-box me-2"></i>Producten Overzicht
        </h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Nieuw Product
        </a>
    </div>

    <!-- Producten Tabel -->
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>
                                <i class="fas fa-box me-2 text-muted"></i>
                                Naam
                            </th>
                            <th>
                                <i class="fas fa-align-left me-2 text-muted"></i>
                                Beschrijving
                            </th>
                            <th>
                                <i class="fas fa-euro-sign me-2 text-muted"></i>
                                Prijs
                            </th>
                            <th class="text-end">Acties</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-semibold">@Html.DisplayFor(modelItem => item.Name)</td>
                                <td>
                                    <span class="text-muted">@Html.DisplayFor(modelItem => item.Description)</span>
                                </td>
                                <td class="fw-semibold">
                                    â‚¬ @item.Price.ToString("N2", new System.Globalization.CultureInfo("nl-NL"))
                                </td>
                                <td class="text-end">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm" title="Bewerken">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm" title="Details">
                                        <i class="fas fa-info-circle"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" title="Verwijderen">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div> 