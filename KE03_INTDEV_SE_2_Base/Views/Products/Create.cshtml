@model DataAccessLayer.Models.Product

@{
    ViewData["Title"] = "Nieuw Product";
}

<div class="container-fluid py-4">
    <div class="card shadow-sm" style="max-width:600px; margin:0 auto;">
        <div class="card-header bg-primary text-white">
            <h3 class="card-title mb-0"><i class="fas fa-plus me-2"></i>Nieuw Product</h3>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <div class="form-group mb-3">
                    <label asp-for="Name" class="control-label">Naam</label>
                    <input asp-for="Name" class="form-control" placeholder="Voer productnaam in" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Description" class="control-label">Beschrijving</label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Voer een beschrijving in"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Price" class="control-label">Prijs</label>
                    <div class="input-group">
                        <span class="input-group-text">â‚¬</span>
                        <input name="Price" class="form-control" type="text" value="0,00" />
                    </div>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="StockQuantity" class="control-label">Voorraad</label>
                    <input asp-for="StockQuantity" class="form-control" type="number" min="0" value="0" />
                    <span asp-validation-for="StockQuantity" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="CategoryId" class="control-label">Categorie</label>
                    <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories">
                        <option value="">-- Selecteer een categorie --</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
                <div class="form-group d-flex gap-2">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> Aanmaken
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Terug naar overzicht
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 