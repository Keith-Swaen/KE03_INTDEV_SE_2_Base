@model DataAccessLayer.Models.Product

@{
    ViewData["Title"] = "Nieuw Product";
}

<h1>Nieuw Product</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label">Naam</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label">Beschrijving</label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Price" class="control-label">Prijs</label>
                <div class="input-group">
                    <span class="input-group-text">â‚¬</span>
                    <input name="Price" class="form-control" type="text" value="0,00" />
                </div>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="StockQuantity" class="control-label">Voorraad</label>
                <input asp-for="StockQuantity" class="form-control" type="number" min="0" value="0" />
                <span asp-validation-for="StockQuantity" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="CategoryId" class="control-label">Categorie</label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories">
                    <option value="">-- Selecteer een categorie --</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Aanmaken" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Terug naar overzicht</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 